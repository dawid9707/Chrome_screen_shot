{
  "manifest_version": 3,
  "name": "Chrome_screenshot",
  "description": "Take a screenshot!",
  "version": "1.3",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "notifications",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}
